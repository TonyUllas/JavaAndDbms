	    Bk.setBounds(10,10,70,25);
	    
	    JButton Ho=new JButton("Home");
		JButton Ex=new JButton("Exit");
		
		Ho.setBounds(616,440,80,30);
		Ex.setBounds(002,440,60,30);
	    
	    
