	    f.add(passwd1); 
	    f.add(Ho);
		f.add(Ex);
		f.add(usri);
		f.add(Su);
		f.add(Bk);
		
	    
	    f.setSize(700,500);  
	    f.setLayout(null);  
	    f.setVisible(true);  
	    f.setLocationRelativeTo(null); 
	    
	    Ex.addActionListener(new ActionListener()
		 {  
			    public void actionPerformed(ActionEvent e)
			    {  
			    	Exit.exiting();
			    	f.setVisible(false);
			    }  
	     });  
		
		 Ho.addActionListener(new ActionListener()
		 {  
